    "version": "0.2.0",
    "configurations": [    
        {
            "type": "chrome",
            "request": "launch",
            "name": "Frontend in Chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/gui"
        },
        {
            "name": "Backend",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "ws.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--port",
                "14000"
            ],
            "jinja": true
        },
    ]
}